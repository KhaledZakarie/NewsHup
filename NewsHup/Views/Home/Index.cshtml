@model List<Article>
@{
    ViewData["Title"] = "Home Page";
    Layout = "_MainLayout";
}


<section class="container pt-3 page">
   
    <div class="row  g-4">

        @foreach(Article article in Model)
        {
            <div class="col-md-3">

                <div class="artical  h-100 shadow-lg ">
                    <div class="card h-100">
                        <img src="@article.ImageUrl" class="card-img-top w-100" alt="...">
                        <div class="card-body">
                            <p class="card-text">@article.Title</p>
                        </div>
                    </div>
                </div>

            </div>
            <div class="col-md-3">

                <div class="artical  h-100 shadow-lg">
                    <div class="card h-100">
                        <img src="@article.ImageUrl" class="card-img-top w-100" alt="...">
                        <div class="card-body">
                            <p class="card-text">@article.Title</p>
                        </div>
                    </div>
                </div>

            </div>
        }

    </div>
</section>
