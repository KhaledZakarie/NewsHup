@model List<Article>
@{
    ViewData["Title"] = "Home Page";
    Layout = "_MainLayout";
}
@section Styles {
    <link href="~/lib/owlcarousel2/assets/owl.carousel.min.css" rel="stylesheet" />
    <link href="~/lib/owlcarousel2/assets/owl.theme.default.min.css" rel="stylesheet" />
}
<div class="row pt-5">
    <div class="col-lg-6 col-md-6 col-sm6 animate__animated animate__rotateIn animate__delay-2sb">
        <div class="owl-carousel carousel3">


            @foreach (Article article in Model)
            {
                <div class="">
                    <div class="card h-100 position-relative">
                        @* <img src="/upload/@article.ImageUrl" class="card-img-top w-100" height="400px" alt="..."> *@
                        <img src="@article.ImageUrl" class="card-img-top w-100" height="400px" alt="...">
                        <div class="overflow-hidden card-body article-body position-absolute bottom-0 start-0 end-0 p-4  text-white">
                            <p class="card-text "><span class="bg-danger p-5">Breaking news</span> @article.Title</p>
                        </div>
                    </div>
                </div>
            }

        </div>
    </div>
    <div class="col-lg-6 col-md-6 col-sm6 right-sid animate__animated animate__backInRight animate__delay-2sb">
         
        


            @foreach (Article article in Model)
            {
                <div class="row border-bottom">

                    <div class=" ">
                        <div class="d-flex justify-content-between align-items-center">
                            @* <img src="/upload/@article.ImageUrl" class="card-img-top w-100" alt="..."> *@
                            <img src="@article.ImageUrl" class=""width="150px" alt="...">


                           
                                <p class="card-text">@article.Title</p>
                           
                        </div>
                    </div>

                </div>
            }
               
                   
                   
                
      
    </div>
</div>




<div id="HomeArea">
    <partial name="_HomePartial" model="Model" />

</div>


