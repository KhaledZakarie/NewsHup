@{
}



<section class="container pt-3 animate__animated animate__fadeInBottomRight animate__delay-2s">

    <div class="row  g-4 h-100">

        @foreach (Article article in Model)
        {


            <div class="col-md-4 h-100 ">


                <div class="artical shadow-lg card position-relative overflow-hidden" asp-controller=" Article" asp-action="ArticleDetils" asp-route-id="@article.Id">
                        <div class="p-2">


                            <picture class="d-block rounded-2" style="height:400px">
                                @if(article.ImageUrl.Contains("http")){

                                <source class=" card-img-top h-100 w-100 " srcset="@article.ImageUrl" style="height:400px">
                                }
                                else
                                {
                                <source class=" card-img-top h-100 w-100 " srcset="/upload/@article.ImageUrl" style="height:400px">
                                }
                            <img src="/assets/newspaper_11202485.gif" class="card-img-top w-100" alt="..." style="height:400px">

                            </picture>


                            
                        </div>

                        <div class="position-absolute bottom-0 h-100 w-100 bg-white text-center actical-description fw-bold fa-1x overflow-hidden">
                            <p class="card-text">@article.Title</p>
                        </div>

                    </div>

            
                </div>
        }

    </div>
</section>