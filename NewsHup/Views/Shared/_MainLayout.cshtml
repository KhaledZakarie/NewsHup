    <div class="container-fluid footer py-1 wow fadeIn" data-wow-delay="0.2s">
            <div class="container py-5 border-start-0 border-end-0" style="border: 1px solid; border-color: rgb(255, 255, 255, 0.08);">
                <div class="row g-5">
                    <div class="col-md-6 col-lg-6 col-xl-4">
                            <a asp-controller="Home" asp-action="Index" class="p-0">
                            <h4 class="text-white">
                            <img src="/assets/img/kaiadmin/logo_light.png"
                                 alt="navbar brand"
                                 class="navbar-brand"
                                 width="150px"
                                 style="height: auto;" />
                                </h4>
                                <!-- <img src="img/logo.png" alt="Logo"> -->
                            </a>
                        <div class="footer-item">
                        
                           
                            <div class="d-flex">
                                <a  class="d-flex rounded align-items-center py-2 px-3 me-2">
                                    <i class="fas fa-apple-alt text-white"></i>
                                    <div class="ms-3">
                                       
                                        <h6 class="text-white">App Store</h6>
                                    </div>
                                </a>
                                <a  class="bg-dark d-flex rounded align-items-center py-2 px-3 ms-2">
                                    <i class="fas fa-play "></i>
                                    <div class="ms-3">
                                   
                                        <h6 class="text-white">Google Play</h6>
                                    </div>
                                </a>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6 col-lg-6 col-xl-2">
                        <div class="footer-item">
                            <h4 class="text-white mb-4">Quick Links</h4>
                        <a asp-controller="Home" asp-action="Index"><i class="fas fa-angle-right me-2"></i> General </a>
                        <a asp-area="Business" asp-controller="Home" asp-action="Index"><i class="fas fa-angle-right me-2"></i> Business </a>
                        <a asp-area="Entertainment" asp-controller="Home" asp-action="Index"><i class="fas fa-angle-right me-2"></i> Entertainment</a>
                        <a asp-area="Health" asp-controller="Home" asp-action="Index"><i class="fas fa-angle-right me-2"></i> Health</a>
                        <a asp-area="Science" asp-controller="Home" asp-action="Index"><i class="fas fa-angle-right me-2"></i> Science</a>
                        <a asp-area="Sports" asp-controller="Home" asp-action="Index"><i class="fas fa-angle-right me-2"></i> Sports</a>
                        <a asp-area="Technology" asp-controller="Home" asp-action="Index"><i class="fas fa-angle-right me-2"></i> Technology</a>
                        </div>
                    </div>
                    <div class="col-md-6 col-lg-6 col-xl-3">
                        <div class="footer-item">
                            <h4 class="text-white mb-4">Support</h4>
                            <a ><i class="fas fa-angle-right me-2"></i> Privacy Policy</a>
