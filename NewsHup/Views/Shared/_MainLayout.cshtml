<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>  NewsHot - @ViewData["Title"] </title>
    @await RenderSectionAsync("Styles", required: false)
    <link rel="stylesheet" href="~/lib/font-awesome/css/all.min.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/NewsHup.styles.css" asp-append-version="true" />
</head>
<body class="m-0 d-flex flex-column justify-content-between">
    <header>

        <!-- Nav Bar -->
        <nav class="navbar navbar-expand-lg shadow-lg fixed-top">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="/assets/img/kaiadmin/logo_light.png"
                         alt="navbar brand"
                         class="navbar-brand"
                         width="150px"
                         style="height: auto;" />
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav main-ul mx-auto">
                        <li class="nav-item">
                            <a class="nav-link text-decoration-none @(Context.Request.Path == "/" && string.IsNullOrEmpty(Context.Request.Query["area"]) ? "active" : "")"
                            aria-current="" asp-area="" asp-controller="Home" asp-action="Index">General</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(Context.Request.Query["area"] == "Business" ? "active" : "")"
                            asp-area="Business" asp-controller="Home" asp-action="Index">Business</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(Context.Request.Query["area"] == "Entertainment" ? "active" : "")" 
                            asp-area="Entertainment" asp-controller="Home" asp-action="Index">Entertainment</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(Context.Request.Query["area"] == "Health" ? "active" : "")"
                            asp-area="Health" asp-controller="Home" asp-action="Index">Health</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(Context.Request.Query["area"] == "Science" ? "active" : "")"
                               asp-area="Science" asp-controller="Home" asp-action="Index">Science</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(Context.Request.Query["area"] == "Sports" ? "active" : "")"
                            asp-area="Sports" asp-controller="Home" asp-action="Index">Sports</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(Context.Request.Query["area"] == "Technology" ? "active" : "")"
                            asp-area="Technology" asp-controller="Home" asp-action="Index">Technology</a>
                        </li>
                    </ul>
                    <ul class="navbar-nav mx-start">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="User" asp-action="Login">Log in</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link">Welcome user</a>
                        </li> 

                        <li class="nav-item">
                            <a class="nav-link" asp-controller="User" asp-action="Login">Logout</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container min-vh-100">
        <main role="main" class="py-3 my-5" />
            @RenderBody()
        </main>
    </div>

