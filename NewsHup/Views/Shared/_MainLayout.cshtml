</head>
<body class="m-0 d-flex flex-column justify-content-between">
    <header>
        
        <!-- Nav Bar -->
        <nav class="navbar navbar-expand-lg my-2 shadow-lg fixed-top m-auto rounded-4 bg-secondary  border border-2 border-dark bg-opacity-75 text-danger animate__animated animate__zoomIn animate__delay-1s " style="width:90%">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="/assets/img/kaiadmin/logo_light.png"
                         alt="navbar brand"
                         class="navbar-brand"
                         width="150px"
                         style="height: auto;" />
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav main-ul mx-auto">
                        <!-- Nav links restored -->
                        <li class="nav-item">
                            <a class="nav-link text-decoration-none @(Context.Request.Path == "/" && string.IsNullOrEmpty(Context.Request.Query["area"]) ? "active" : "")"
                               asp-area="" asp-controller="Home" asp-action="Index">General</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(Context.Request.Query["area"] == "Business" ? "active" : "")"
                               asp-area="Business" asp-controller="Home" asp-action="Index">Business</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(Context.Request.Query["area"] == "Entertainment" ? "active" : "")"
                               asp-area="Entertainment" asp-controller="Home" asp-action="Index">Entertainment</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(Context.Request.Query["area"] == "Health" ? "active" : "")"
                               asp-area="Health" asp-controller="Home" asp-action="Index">Health</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(Context.Request.Query["area"] == "Science" ? "active" : "")"
                               asp-area="Science" asp-controller="Home" asp-action="Index">Science</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(Context.Request.Query["area"] == "Sports" ? "active" : "")"
                               asp-area="Sports" asp-controller="Home" asp-action="Index">Sports</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(Context.Request.Query["area"] == "Technology" ? "active" : "")"
                               asp-area="Technology" asp-controller="Home" asp-action="Index">Technology</a>
                        </li>
                    </ul>

                    <ul class="navbar-nav mx-start">
                        @if (!User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <a class="nav-link a-register text-white rounded-4" asp-controller="User" asp-action="Login">Log in</a>
                            </li>
                        }
                        else
                        {
                            var userName = User.FindFirst("Name")?.Value;
                            var userRole = User.FindFirst("Role")?.Value;
                            var userId = User.FindFirst("Id")?.Value;

                            <div class="dropdown">
                                <a class="" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    <img src="/assets/img/profile2.jpg" class="rounded-5" width="50px" alt="Profile Picture">
                                    <span class="profile-username">
                                        <span class="op-7">Hi, @userRole</span>
                                        <span class="fw-bold">@userName</span>
                                    </span>
                                </a>

                                <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                                    @if (userRole == "Admin" || userRole == "Writer")
                                    {
                                    <li>
                                        <a class="dropdown-item" asp-controller="Article" asp-action="MyArticles" asp-route-userId="@userId">
                                            <i class="fas fa-sliders-h fa-fw"></i> My Article
                                        </a>
                                    </li>
                                                               
                                    }
                                    @if (userRole == "Admin")
                                    {
                                        <li><a class="dropdown-item" asp-controller="Admin" asp-action="Dashboard"><i class="fas fa-cog fa-fw"></i> Dashboard</a></li>
                                    }    
                                    @if (userRole == "Reader")
                                    {
                                                                <li><a class="dropdown-item" asp-controller="User" asp-action="portfolio"><i class="fa-solid fa-user-tie"></i> portfolio</a></li>
                                    }
                                    <li><hr class="dropdown-divider"></li>
                                    <li><a class="dropdown-item" asp-controller="User" asp-action="SignOut"><i class="fas fa-sign-out-alt fa-fw"></i> Log Out</a></li>
                                </ul>
                            </div>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>





    <div class="container min-vh-100 mt-5 pt-5">
        <main role="main" class="pb-3 mt-5 pt-5" />
            @RenderBody()
        </main>
    </div>

