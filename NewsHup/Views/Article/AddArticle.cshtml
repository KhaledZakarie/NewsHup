@model ArticleCategoryWithImgViewModel

@{
    ViewData["Title"] = "AddArticle";
    Layout = "_MainLayout";
    SelectList Categories = new SelectList(Model.categories, "CategoryId", "CategoryName");
}

<section class="container d-flex flex-column justify-content-center w-75">
    <h1>Add Article:</h1>
    <form method="post" class="shadow p-3 rounded-5" enctype="multipart/form-data">

        <div class="form-floating mb-3 ">
            <input class="form-control shadow-none rounded-4" asp-for="Title" placeholder="Title">
            <label asp-for="Title">Article Title</label>
            <span class="text-danger" asp-validation-for="Title"></span>
        </div>

        <div class="form-floating mb-3 ">
            <textarea class="form-control shadow-none rounded-4" asp-for="Content" placeholder="Content"></textarea>
            <label asp-for="Content">Content</label>
            <span class="text-danger" asp-validation-for="Content"></span>
        </div>

        <select class="form-control shadow-none" asp-for="CatId" asp-items="Categories">
            <option value="0">--Select Category--</option>
        </select>
        <span class="text-danger" asp-validation-for="CatId"></span>

        <div class="form mb-3 ">
            <label asp-for="FormFile" class="my-2">Article Img: </label>
            <input class="form-control shadow-none rounded-4" asp-for="FormFile" type="file" placeholder="ImageUrl">
        </div>

        <button type="submit" class="btn btn-outline-primary m-3 ms-auto d-block w-25 shadow">Submit</button>

    </form>
</section>

@section Scripts{
    <script src="/lib/jquery/dist/jquery.js"></script>
    <script src="/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}



